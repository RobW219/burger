<div class="container" id="allBurgers">
	<div class="col-md-5 text-center" class="task" id="newBurgers">
		<div class="row">
			<h2 style="text-center">Mouth Watering Menu!</h2>
			{{#each burger_data}}
				{{#unless this.devoured}}
			<div class="col-md-8 text-center">
				<pre>{{this.id}}. {{this.burger_name}}</pre>
			</div>
			<div class="col-md-3 text-center">
				<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
					<input type="hidden" name="burger_id" type="text" value={{this.id}}>
					<br>
					<button type="submit" class="btn btn-default">DEVOUR IT!</button>
				</form>
			</div>
				{{/unless}}
			{{/each}}
		</div>
	</div>
	<br>
	<div class="container">
		<div class="row" id="moreBurgers">
			<div class="col-md-12 text-center enter_selection">
				<h3>Don't See It on Menu? Enter a burger you would like to eat!</h3>			
				<form action="/burgers/create" method="POST">
					<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
					<button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
				</form>
			</div>
		</div>
	</div>
<br>
	<div class="col-md-4 text-center" class="task" id="ateBurgers">
		<h2>Burgers Your Big Butt Already Ate!</h2>
		{{#each burger_data}}
			{{#if this.devoured}}
				<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
			{{/if}}
		{{/each}}
	</div>
</div>
